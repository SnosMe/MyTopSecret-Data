config("compiler_defaults") {
  if (current_os == "linux") {
    cflags = [
      "-fPIC",
      "-fno-stack-protector",
      "-ffunction-sections",
    ]
  }
}
config("executable_ldconfig") {
  if (!is_mac) {
    ldflags = [
      "-Wl,--gc-sections",
      "-Wl,-rpath=\$ORIGIN/",
      "-Wl,-rpath-link=",
    ]
  }
}
